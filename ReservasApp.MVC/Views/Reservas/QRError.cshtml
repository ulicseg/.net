@{
    ViewData["Title"] = "Error - Código QR";
    Layout = null; // Sin layout para que sea independiente
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .error-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            border: none;
        }
        .error-header {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            border-radius: 20px 20px 0 0;
            padding: 2rem;
            text-align: center;
        }
        .error-body {
            padding: 2rem;
            text-align: center;
        }
        .close-btn {
            background: linear-gradient(135deg, #6c757d, #495057);
            border: none;
            border-radius: 25px;
            padding: 0.75rem 1.5rem;
            color: white;
            transition: all 0.3s ease;
        }
        .close-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="col-md-6 col-lg-4">
            <div class="card error-card">
                <div class="error-header">
                    <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                    <h2 class="mb-2">Código QR Inválido</h2>
                    <p class="mb-0 opacity-75">No se pudo acceder a la información</p>
                </div>
                
                <div class="error-body">
                    <div class="mb-4">
                        <i class="fas fa-qrcode fa-4x text-muted mb-3"></i>
                        <h5 class="text-danger mb-3">@ViewBag.Error</h5>
                        <p class="text-muted">
                            Esto puede suceder si:
                        </p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-clock text-warning me-2"></i> El código QR ha expirado (10 minutos)</li>
                            <li><i class="fas fa-link text-danger me-2"></i> El enlace está incompleto o dañado</li>
                            <li><i class="fas fa-ban text-secondary me-2"></i> El código QR ya fue utilizado</li>
                        </ul>
                    </div>

                    <div class="d-flex gap-3 justify-content-center">
                        <button onclick="history.back()" class="btn close-btn">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </button>
                        <button onclick="window.close()" class="btn close-btn">
                            <i class="fas fa-times me-2"></i>Cerrar
                        </button>
                    </div>
                    
                    <p class="text-muted mt-4 small">
                        <i class="fas fa-info-circle me-1"></i>
                        Si el problema persiste, contacte al administrador del sistema
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
