@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<div class="hero-section text-white position-relative overflow-hidden">
    <div class="hero-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
    <div class="hero-gradient-overlay"></div>
    <div class="hero-mesh-pattern"></div>
    
    <div class="container position-relative" style="z-index: 10;">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content" data-aos="fade-right">
                    <div class="hero-badge mb-4">
                        <span class="badge-glow">✨ Sistema Médico Premium</span>
                    </div>
                    <h1 class="hero-title mb-4">
                        <span class="title-primary">Sistema de</span><br>
                        <span class="title-gradient">Reservas Médicas</span>
                    </h1>
                    <p class="hero-subtitle mb-5">
                        Transforma tu experiencia médica con nuestra plataforma inteligente.
                        <span class="highlight-text">Gestión eficiente</span>, 
                        <span class="highlight-text">acceso 24/7</span> y 
                        <span class="highlight-text">seguridad garantizada</span>.
                    </p>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="hero-actions">
                            <a asp-controller="Reservas" asp-action="Index" class="btn-premium btn-primary me-3">
                                <span class="btn-icon">📅</span>
                                <span class="btn-text">Ver Mis Reservas</span>
                                <div class="btn-shimmer"></div>
                            </a>
                            <a asp-controller="Reservas" asp-action="Create" class="btn-premium btn-outline">
                                <span class="btn-icon">➕</span>
                                <span class="btn-text">Nueva Reserva</span>
                                <div class="btn-shimmer"></div>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="hero-actions">
                            <a asp-controller="Account" asp-action="Register" class="btn-premium btn-primary me-3">
                                <span class="btn-icon">✨</span>
                                <span class="btn-text">Comenzar Gratis</span>
                                <div class="btn-shimmer"></div>
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn-premium btn-outline">
                                <span class="btn-icon">🔑</span>
                                <span class="btn-text">Iniciar Sesión</span>
                                <div class="btn-shimmer"></div>
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-visual" data-aos="fade-left">
                    <div class="medical-card">
                        <div class="card-header">
                            <div class="status-indicator active"></div>
                            <span class="card-title">Consulta Médica</span>
                        </div>
                        <div class="card-content">
                            <div class="appointment-info">
                                <div class="date-time">
                                    <span class="date">15 ENE</span>
                                    <span class="time">14:30</span>
                                </div>
                                <div class="doctor-info">
                                    <div class="doctor-avatar">👨‍⚕️</div>
                                    <div class="doctor-details">
                                        <div class="doctor-name">Dr. García</div>
                                        <div class="specialty">Medicina General</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="floating-elements">
                        <div class="floating-el el-1">💊</div>
                        <div class="floating-el el-2">📋</div>
                        <div class="floating-el el-3">🩺</div>
                        <div class="floating-el el-4">⚕️</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

