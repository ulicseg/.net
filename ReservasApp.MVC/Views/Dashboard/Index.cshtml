@model IEnumerable<Reserva>
@{
    ViewData["Title"] = "Panel Principal";
    var usuario = ViewBag.Usuario as Usuario;
    var totalReservas = (int)ViewBag.TotalReservas;
    var proximasReservas = (int)ViewBag.ProximasReservas;
    var reservasCompletadas = (int)ViewBag.ReservasCompletadas;
    var proximaReserva = ViewBag.ProximaReserva as Reserva;
}

<div class="dashboard-container">
    <!-- Bienvenida -->
    <div class="welcome-section">
        <h1>¬°Bienvenido/a, @usuario?.Nombre! üëã</h1>
        <p>Tu panel m√©dico personal</p>
    </div>

    <!-- Estad√≠sticas -->
    <div class="stats-grid">
        <div class="stat-card total">
            <div class="stat-icon">üìä</div>
            <div class="stat-content">
                <h3>@totalReservas</h3>
                <p>Total Reservas</p>
            </div>
        </div>

        <div class="stat-card proximas">
            <div class="stat-icon">üìÖ</div>
            <div class="stat-content">
                <h3>@proximasReservas</h3>
                <p>Pr√≥ximas Citas</p>
            </div>
        </div>

        <div class="stat-card completadas">
            <div class="stat-icon">‚úÖ</div>
            <div class="stat-content">
                <h3>@reservasCompletadas</h3>
                <p>Completadas</p>
            </div>
        </div>
    </div>

    <!-- Pr√≥xima Reserva Destacada -->
    @if (proximaReserva != null)
    {
        <div class="next-appointment">
            <h2>üïê Pr√≥xima Cita</h2>
            <div class="appointment-card">
                <div class="appointment-info">
                    <h3>@proximaReserva.Titulo</h3>
                    <p class="date">üìÖ @proximaReserva.FechaReserva.ToString("dddd, dd MMMM yyyy")</p>
                    <p class="time">‚è∞ @proximaReserva.FechaReserva.ToString("HH:mm")</p>
                    <p class="description">@proximaReserva.Descripcion</p>
                </div>
                <div class="appointment-actions">
                    <a asp-controller="Reservas" asp-action="Details" asp-route-id="@proximaReserva.Id" class="btn-details">Ver Detalles</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="no-appointments">
            <h2>üìã No tienes citas programadas</h2>
            <p>¬°Es un buen momento para programar tu pr√≥xima consulta!</p>
            <a asp-controller="Reservas" asp-action="Create" class="btn-create">Nueva Reserva</a>
        </div>
    }

    <!-- Acciones R√°pidas -->
    <div class="quick-actions">
        <h2>üöÄ Acciones R√°pidas</h2>
        <div class="actions-grid">
            <a asp-controller="Reservas" asp-action="Create" class="action-card">
                <div class="action-icon">‚ûï</div>
                <h3>Nueva Reserva</h3>
                <p>Programa una nueva cita m√©dica</p>
            </a>

            <a asp-controller="Reservas" asp-action="Index" class="action-card">
                <div class="action-icon">üìã</div>
                <h3>Mis Reservas</h3>
                <p>Ver todas mis citas</p>
            </a>

            <a href="#" class="action-card">
                <div class="action-icon">üë§</div>
                <h3>Mi Perfil</h3>
                <p>Actualizar datos personales</p>
            </a>
        </div>
    </div>

    <!-- Lista R√°pida de Reservas -->
    @if (Model.Any())
    {
        <div class="recent-reservations">
            <h2>üìã Reservas Recientes</h2>
            <div class="reservations-list">
                @foreach (var reserva in Model.Take(5))
                {
                    <div class="reservation-item @(reserva.FechaReserva > DateTime.Now ? "upcoming" : "completed")">
                        <div class="reservation-info">
                            <h4>@reserva.Titulo</h4>
                            <p class="date">@reserva.FechaReserva.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="reservation-status">
                            @if (reserva.FechaReserva > DateTime.Now)
                            {
                                <span class="status upcoming">Pr√≥xima</span>
                            }
                            else
                            {
                                <span class="status completed">Completada</span>
                            }
                        </div>
                    </div>
                }
            </div>
            
            @if (Model.Count() > 5)
            {
                <div class="view-all">
                    <a asp-controller="Reservas" asp-action="Index">Ver todas las reservas</a>
                </div>
            }
        </div>
    }
</div>

<style>
